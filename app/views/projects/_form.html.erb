<%= form_for(@project, local: true,html:{class:"form-horizontal"}) do |form| %>


<!-- Text input http://getbootstrap.com/css/#forms -->
<div class="form-group">
  <label for="textinput" class="control-label col-sm-2">Project Title</label>
  <div class="col-sm-10">
    <%=form.text_field :title,class:"form-control",placeholder:"Title"%>
  </div>
</div>
<!-- Text input http://getbootstrap.com/css/#forms -->
<div class="form-group">
  <label for="textinput" class="control-label col-sm-2">Start Date</label>
  <div class="col-sm-10">
      <%=form.text_field :start_date,type:"date",class:"form-control",placeholder:"start date"%>
  </div>
</div>
<div class="form-group">
  <label for="textinput" class="control-label col-sm-2">End Date</label>
  <div class="col-sm-10">
     <%=form.text_field :end_date,type:"date",class:"form-control",placeholder:"end date"%>
  </div>
</div>
<div class="form-group">
  <label for="textinput" class="control-label col-sm-2">Category</label>
  <div class="col-sm-10">
<%=form.select :category,options_for_select((1..5).step(1)),class:"form-control",placeholder:"end date"%>
  </div>
</div>
<!-- Button http://getbootstrap.com/css/#buttons -->
<div class="form-group">
  <label class="control-label col-sm-2" for="singlebutton">Save project</label>
  <div class="text-right col-sm-10">
    <%= form.submit%>
  </div>
</div>



<% end %>