<%= link_to "add new project", new_project_path,class:"btn btn-success"%>
<h1>Projects</h1>

<table class="table table-hover">
	<thead>
		<tr>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @projects.each do |pr| %>
		<tr class="prow">
			<td><%= pr.title %></td>
			<td><%= pr.start_date %></td>
			<td><%= pr.end_date %></td>
			<td><%= pr.category %></td>
			<td><%= pr.created_at %></td>
			<td><%= pr.updated_at %></td>
			<td><%= link_to "delete" ,project_path(pr),method: :delete,remote: :true,class:"ajaxGet"%></td>
			<td><%= link_to "view" ,project_path(pr)%></td>
		</tr>
		<% end %>
	</tbody>
</table>

<script type="text/javascript">
	$(document).ready(function(){
		$(".ajaxGet").on('ajax:success',function(e,data,status,xhr){
			$(this).closest('tr.prow').remove();
		}).on('ajax:error',function(e,xhr,status,error){
			console.log("err")
		})
	})
</script>